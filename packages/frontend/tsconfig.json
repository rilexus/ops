{
  "extends": "../../tsconfig.json",
  "compilerOptions": {
    "composite": true,
    "outDir": "dist",
    "baseUrl": "src",
    "lib": ["dom", "dom.iterable", "esnext"],
    "jsx": "react-jsx",
    "paths": {
      "@utils": ["utils"],
      "@utils/*": ["utils/*"],
      "@hooks": ["hooks"],
      "@hooks/*": ["hooks/*"],
      "@libs": ["libs"],
      "@libs/*": ["libs/*"],
      "@components": ["components"],
      "@components/*": ["components/*"],
      "@icons": ["icons"],
      "@icons/*": ["icons/*"]
    },
  },
  "include": ["src/**/*"],
  "exclude": [
    "**/*.spec.ts",
    "**/*.test.ts",
    "dist",
    "docs",
    "node_modules",
    "webpack.config.ts",
    "site"
  ]
}

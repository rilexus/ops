{
  "extends": "../../tsconfig.json",
  "compilerOptions": {
    "composite": true,
    "outDir": "dist",
    "baseUrl": "src",
    "paths": {
      "@utils": ["utils"],
      "@utils/*": ["utils/*"]
    }
  },
  "include": ["src/**/*"],
  "exclude": [
    "**/*.spec.ts",
    "**/*.test.ts",
    "dist",
    "node_modules"
  ]
}
